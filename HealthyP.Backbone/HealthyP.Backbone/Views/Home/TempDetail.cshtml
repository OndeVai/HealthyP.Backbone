@model dynamic

<div class="row">
    <section class="col-lg-12">
        
        <ol class="breadcrumb">
            <li><a href="#">Patients</a></li>
            <li class="active">Patient 1</li>
        </ol>

        <header>
            <div class="page-header">
                <h1>Patient 1 - Details</h1>
            </div>
        </header>

        <form role="form" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    <label for="exampleInputEmail1" class="label-required">First Name</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="First Name">
                </div>
                <div class="col-md-3">
                    <label for="exampleInputEmail1">Last Name</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Last Name">
                </div>
                <div class="col-md-4">
                    <label for="exampleInputEmail1" class="label-required">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-6">
                    <label for="exampleInputEmail1" class="label-required">Image Url</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">

                </div>
                <div class="col-md-1">
                    <label for="exampleInputEmail1" class="label-required text-muted">(prev)</label>
                    <img class="profile-preview" src="data:image/png;base64,">

                </div>
            </div>
            <div class="form-group">



                <div class="clearfix"></div>
                <div class="col-md-10">

                    <h3>Insurance <button class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal"> <i class="glyphicon glyphicon-plus-sign"></i> Add</button></h3>



                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="col-md-4"><a href="#"><em>Payor <i class="glyphicon glyphicon-arrow-down"></i></em></a></th>
                                    <th class="col-md-4"><a href="#">Date</a></th>
                                    <th class="col-md-1"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < 5; i++)
                                    {
                                        <tr>

                                            <td>Payor1</td>
                                            <td>12/12/2013</td>
                                            <td class="grid-actions"><a href="edit" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-edit"></i></a> &nbsp; <a href="edit"><i class="glyphicon glyphicon-remove"></i></a></td>
                                        </tr>

                                    }
                                }


                            </tbody>
                        </table>
                    </div>

                    <ul class="pager">
                        <li class="previous disabled"><a href="#">&larr; Older</a></li>
                        <li class="next"><a href="#">Newer &rarr;</a></li>
                    </ul>
                </div>

            </div>
            <button type="submit" class="btn btn-default btn-lg btn-primary">Submit</button>
        </form>
    </section>


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Add Insurance</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label> Payor</label>
                            <select class="form-control">
                                <option>Payor1</option>
                                <option>Payor2</option>
                                <option>Payor3</option>
                                <option>Payor4</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label> Date</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label> Notes</label>
                           <textarea class="form-control" rows="10"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>